---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ app.name | lower }}
  namespace: {{ app.namespace | lower if app.namespace is defined and  app.namespace is not false else "default" }}
spec:
  selector:
    matchLabels:
      app: {{ app.name | lower }}
  {% if app.replicas is defined -%}
  replicas: {{ app.replicas }}
  {% endif -%}
  template:
    metadata:
      labels:
        app: {{ app.name | lower }}
        name: {{ app.name | lower }}-deployment
    spec:
      {% if app.from_private_github is defined and app.from_private_github is not false -%}
      imagePullSecrets:
        - name: github-pull-secret
      {% endif -%}
      containers:
        {% for container in app.containers -%}
        - name: {{ container.name | lower }}
          image: {{ container.image }}
          {% if container.ports is defined -%}
          ports:
            {% for port in container.ports -%}
            - containerPort: {{ port }}
            {% endfor %}
          {% endif %}

          {% if container.env is defined and container.env is not false -%}
          env:
            {% for var in container.env -%}
            - name: {{ var.name }}
              value: {{ var.value }}
            {% endfor %}
          {% endif %}
        {% endfor %}
        